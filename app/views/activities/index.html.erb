<section class="content-header">
  <h1>Activity Maintenance</h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">All Activities for Project</h3>
      </div> <!-- box-header with-border -->
      <div class="box-body">
        <div class="form-group">
          <%= label_tag(:name, "Select Project:", class: "control-label col-sm-2") %>
          <div class="col-sm-8"><%= select_tag :projects, options_for_select(Project.all.pluck(:name, :id)), { :class => "form-control" } %></div>
        </div>  
        <ul>
        <% @projects.each do |p| %>
          <div id="project_<%= p.id %>">
            <% p.activities.each do |a| %>
              <li><%= link_to a.name, activity_path( a ) %> (<%= a.project.client.name %> - <%= a.project.name %>)</li>
            <% end %>
          </div>
        <% end %>
        </ul>
        <div class="row border-top">
          <div class="col-sm-3 col-xs-6">
            <div class="description-block border-right">
              <%= link_to "Add New Activity", new_activity_path %>
            </div>
          </div> <!-- col-sm-3 col-xs-6 -->
        </div> <!-- row -->
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
