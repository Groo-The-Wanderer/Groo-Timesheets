<section class="content-header">
  <h1>Activity Maintenance</h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Activity Details for <%= @activity.name %></h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <form>
            <div class="form-group">
                <label class="control-label col-sm-2">Name:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @activity.name, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Project:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @activity.project.name, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Start Date:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @start_date, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">End Date:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @end_date, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Billable:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @activity.billable_flag, class: "form-control", disabled: true %></div>
            </div>
        </form>
        <div class="row border-top">
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Edit Activity", edit_activity_path( @activity ) %>
                </div>
            </div> <!-- col-sm-3 col-xs-6 -->
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Delete Activity", activity_path( @activity ), method: :delete, data: {confirm: "Do you really want to delete this activity?", title: "Confirm Deletion"} %>
                </div> <!-- col-sm-3 col-xs-6 -->
            </div> <!-- col-sm-3 col-xs-6 -->
        </div> <!-- row -->
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
