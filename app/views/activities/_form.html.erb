<%= form_for @activity do |a| %>

  <%= a.label :name %>
  <%= a.text_field :name %>
  <br>
  <%= a.label :project %>
  <%= a.select :project_id, Project.pluck(:name, :id) %>
  <br>
  <%= a.label :start_date %>
  <%= a.date_field :start_date %>
  <br>
  <%= a.label :end_date %>
  <%= a.date_field :end_date %>
  <br>
  <%= a.label :billable %>
  <%= a.select :billable_flag, ['true', 'false'] %>
  <br>
  <br>
  <br>
  <%= a.submit 'Save', class: 'btn btn-primary' %>

<% end %>
