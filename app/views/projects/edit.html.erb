<section class="content-header">
  <h1>Project Maintenance</h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Editing Project [<%= @project.name %> - <%= @project.client.name %>]</h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <%= render partial: "form" %>

        <div class="box-header border-top">
            <h3 class="box-title">Project Activities:</h3>
        </div>
        <ul>
        <% @project.activities.each do |a| %>
            <li><%= link_to a.name, activity_path( a ) %></li>
        <% end %>
        </ul>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
