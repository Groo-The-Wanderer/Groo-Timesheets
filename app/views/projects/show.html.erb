<section class="content-header"><h1>Project Maintenance</h1></section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Project Details for <%= @project.name %></h3>
      </div> <!-- box-header with-border -->
      <div class="box-body">
        <p><label>Name: </label><%= @project.name %></p>
        <p>Client: <%= @project.client.name %></p>
        <p>Start Date: <%= @project.start_date %></p>
        <p>End Date: <%= @project.end_date %></p>
        <p>Billable: <%= @project.billable_flag %></p>
        <div class="row border-top border-bottom">
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Edit Project", edit_project_path( @project ) %>
                </div>
            </div> <!-- col-sm-3 col-xs-6 -->
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Delete Project", project_path( @project ), method: :delete %>
                </div> <!-- col-sm-3 col-xs-6 -->
            </div> <!-- col-sm-3 col-xs-6 -->
        </div> <!-- row -->
        <div class="box-header">
            <h3 class="box-title">Project Activities:</h3>
        </div>
        <ul>
        <% @activities.each do |a| %>
            <li><%= link_to a.name, activity_path( a ) %></li>
        <% end %>
        </ul>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
