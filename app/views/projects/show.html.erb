<section class="content-header"><h1>Project Maintenance</h1></section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Project Details for <%= @project.name %></h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Name:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @project.name, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Client:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @project.client.name, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Start Date:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @project.start_date, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">End Date:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @project.end_date, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Billable:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @project.billable_flag, class: "form-control", disabled: true %></div>
            </div>
        </form>
        <div class="row border-top border-bottom">
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Edit Project", edit_project_path( @project ) %>
                </div>
            </div> <!-- col-sm-3 col-xs-6 -->
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Delete Project", project_path( @project ), method: :delete %>
                </div> <!-- col-sm-3 col-xs-6 -->
            </div> <!-- col-sm-3 col-xs-6 -->
        </div> <!-- row -->
        <div class="box-header">
            <h3 class="box-title">Project Activities:</h3>
        </div>
        <ul>
        <% @activities.each do |a| %>
            <li><%= link_to a.name, activity_path( a ) %></li>
        <% end %>
        </ul>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
