<section class="content-header">
  <h1>Timesheet Entry / Update / Query</h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Select the Timesheet to Open</h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <%= form_tag( timesheet_open_path ) %>
          <div class="form-group">
            <%= label_tag(:employee_id, "Employee:", { class: "control-label col-sm-2" }) %>
            <div class="col-sm-8">
              <%= select_tag(:employee_id, options_for_select(Employee.all.pluck(:name, :id)), { :selected =>   @current_user.id, class: "form-control" }) %>
            </div> <!-- col-sm-8 -->
          </div> <!-- form-group -->
          <div class="form-group">
            <%= label_tag(:week_id, "Week:", { class: "control-label col-sm-2" }) %>
            <div class="col-sm-8">
              <%= select_tag(:week_id, options_for_select(Week.all.pluck(:name, :id)), { class: "form-control" })   %>
            </div> <!-- col-sm-8 -->
          </div> <!-- form-group -->
          <div class="form-group">
            <div class="col-sm-8">
              <%= submit_tag "Open Timesheet", { class: "btn btn-primary" } %>
            </div>
          </div>
        </form>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->