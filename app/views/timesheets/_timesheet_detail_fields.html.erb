  <div class="timesheet-row form-group row">
    <div class="col-xs-1"><%= t.select(:activity_id, Activity.all.pluck(:name, :id), {}, { class: "form-control timesheet-detail-select" }) %></div>
    <%= t.select(:billable_flag, ['true','false'], {}, { class: "form-control timesheet-detail-select-boolean" }) %>

    <div class="col-xs-1"><%= t.text_field :day1_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :day2_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :day3_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :day4_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :day5_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :day6_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :day7_hours, class: "form-control input-sm" %></div>
    <div class="col-xs-1"><%= t.text_field :total_hours, class: "form-control input-sm" %></div>
    
    <%= t.hidden_field :_destroy %>
    <%= link_to_remove_fields 'Remove Row', '.timesheet_detail_fields' %>

  </div>