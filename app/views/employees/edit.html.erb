<section class="content-header">
  <h1>Employee Maintenance</h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Editing Employee [<%= @employee.first_name %> <%= @employee.last_name %>]</h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <%= render partial: "form" %>

        <div class="box-header border-top">
            <h3 class="box-title">Assigned Projects:</h3>
        </div>
        <ul>
        <% @employee.projects.each do |p| %>
            <li><%= link_to p.name, project_path( p ) %></li>
        <% end %>
        </ul>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
