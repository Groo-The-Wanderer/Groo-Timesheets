<%= form_for @employee do |e| %>
  <div class="form-group">
      <%= e.label(:first_name, "First Name:", class: "control-label col-sm-2") %>
      <div class="col-sm-8"><%= e.text_field :first_name, class: "form-control" %></div>
  </div>
  <div class="form-group">
      <%= e.label(:last_name, "Last Name:", class: "control-label col-sm-2") %>
      <div class="col-sm-8"><%= e.text_field :last_name, class: "form-control" %></div>
  </div>
  <div class="form-group">
      <%= e.label(:email, "Email:", class: "control-label col-sm-2") %>
      <div class="col-sm-8"><%= e.email_field :email, class: "form-control" %></div>
  </div>
  <div class="form-group">
      <%= e.label(:start_date, "Start Date:", class: "control-label col-sm-2") %>
      <div class="col-sm-8"><%= e.date_field(:start_date, class: "form-control") %></div>
  </div>
  <div class="form-group">
      <%= e.label(:end_date, "End Date:", class: "control-label col-sm-2") %>
      <div class="col-sm-8"><%= e.date_field(:end_date, class: "form-control") %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-8"><%= e.submit "Submit", class: "btn btn-primary" %></div>
  </div>
<% end %>
