<section class="content-header">
  <h1>Employee Maintenance</h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Employee Details for <%= @employee.first_name %> <%= @employee.last_name %>  </h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <form>
            <div class="form-group">
                <label class="control-label col-sm-2">Name:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @employee.first_name, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Client:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @employee.last_name, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @employee.email, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Start Date:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @start_date, class: "form-control", disabled: true %></div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">End Date:</label>
                <div class="col-sm-8"><%= text_field_tag :none, @end_date, class: "form-control", disabled: true %></div>
            </div>
        </form>
        <div class="row border-top border-bottom">
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Edit Employee", edit_employee_path( @employee ) %>
                </div>
            </div> <!-- col-sm-3 col-xs-6 -->
            <div class="col-sm-3 col-xs-6">
                <div class="description-block border-right">
                    <%= link_to "Delete Employee", employee_path( @employee ), method: :delete, data: {confirm: "Do you really want to delete this employee?", title: "Confirm Deletion"} %>
                </div> <!-- col-sm-3 col-xs-6 -->
            </div> <!-- col-sm-3 col-xs-6 -->
        </div> <!-- row -->
        <div class="box-header">
            <h3 class="box-title">Project Assignments:</h3>
        </div>
        <ul>
        <% @employee.projects.each do |p| %>
            <li><%= link_to p.name, project_path( p ) %></li>
        <% end %>
        </ul>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
