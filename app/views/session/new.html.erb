<section class="content-header">
  <h1>Welcome to Groo Timesheets</h1>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box login-box">
      <div class="box-header with-border">
        <h3 class="box-title">Please login</h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <%= form_tag login_path do %>
          <div class="form-group">
            <label class="control-label col-sm-2">Email:</label>
            <div class="col-sm-12"><%= email_field_tag :email, nil, class: "form-control" %></div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2">Password:</label>
            <div class="col-sm-12"><%= password_field_tag :password, nil, class: "form-control" %></div>
          </div>
          <div class="form-group">
            <div class="col-sm-8"><%= submit_tag "Login", class: "btn btn-primary" %></div>
          </div>
        <% end %>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
