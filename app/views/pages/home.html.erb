<section class="content-header">
  <h1>Welcome to Groo Timesheets <%= @current_user.first_name %> <%= @current_user.last_name %></h1>
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "&nbsp;&nbsp; > &nbsp;&nbsp;" %>
  </ol>
</section>
<section class="content">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Use the Navigation Bar above to start using the system</h3>
      </div> <!-- box-header with-border -->

      <div class="box-body">
        <p>What can you do in here?</p>
        <ul>
          <li>Timesheets</li>
            <ul>
              <li><%= link_to "Create", new_timesheet_path %> and Update Timesheets</li>
              <li>Query Approved Timesheets</li>
            </ul>
          <br>
          <li>Add / Edit / Delete:</li>
            <ul>
              <li><%= link_to "Employees", employees_path %></li>
              <li><%= link_to "Clients", clients_path %></li>
              <li><%= link_to "Projects", projects_path %></li>
              <li><%= link_to "Activities", activities_path %></li>
            </ul>
        </ul>
      </div> <!-- box-body -->
    </div> <!-- box -->
  </div> <!-- col-md-12 -->
</section> <!-- content -->
